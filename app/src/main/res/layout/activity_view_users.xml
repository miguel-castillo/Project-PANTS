<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    tools:context="com.mec.pants.ViewUsersActivity">

    <ListView
        android:id="@+id/usersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EFEEEE"
        tools:ignore="RtlCompat"
        android:layout_above="@id/vuLogoutButton"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/vuViewUsersButton"
        style="@style/buttonMain_style"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/vuViewProfileButton"
        android:layout_toStartOf="@+id/vuViewProfileButton"
        android:text="Users" />

    <Button
        android:id="@+id/vuViewProfileButton"
        style="@style/buttonMain_style"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Profile" />

    <Button
        android:id="@+id/vuLogoutButton"
        style="@style/buttonMain_style"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/vuViewProfileButton"
        android:layout_toRightOf="@+id/vuViewProfileButton"
        android:text="Logout" />

</RelativeLayout>
